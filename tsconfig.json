{
    "compilerOptions": {
        "sourceMap": true,
        "noImplicitAny": false,
        "suppressImplicitAnyIndexErrors": true,
        "removeComments": true,
        "pretty": false,
        "module": "commonjs",
        "target": "es6",
        "jsx": "react",
        "strictNullChecks": true,
        "declaration": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata":true,
        "lib": [
            "es2015",
            "es2016",
            "es2017",
            "dom"
        ],
        "outDir": "./dist",
        "allowSyntheticDefaultImports": true
    },
    "exclude": [
        "node_modules",
        "**/*.test.tsx",
        "**/*.test.ts"
    ]
}
